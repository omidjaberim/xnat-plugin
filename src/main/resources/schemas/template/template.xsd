<xs:schema targetNamespace="http://nrg.wustl.edu/template" xmlns:template="http://nrg.wustl.edu/template" xmlns:xnat="http://nrg.wustl.edu/xnat"
		   xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:import namespace="http://nrg.wustl.edu/xnat" schemaLocation="../xnat/xnat.xsd"/>
	<xs:element name="sample" type="template:sample"/>

	<xs:complexType name="sample">
		<xs:annotation>
			<xs:documentation>A very simple sample data type that indicates whether a subject consented to participate in a study.</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="xnat:subjectAssessorData">
				<xs:sequence>
					<xs:element name="consented">
						<xs:annotation>
							<xs:documentation>Indicates whether the subject consented to participate.</xs:documentation>
						</xs:annotation>
						<xs:simpleType>
							<xs:restriction base="xs:boolean"/>
						</xs:simpleType>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
</xs:schema>
