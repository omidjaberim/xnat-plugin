<!-- BEGIN META-INF/resources/templates/screens/XDATScreen_edit_template_sample.vm -->
$page.setTitle("Sample")
$page.setLinkColor($ui.alink)
$page.setVlinkColor($ui.vlink)

#macro(showBoolean $property $item)
<!-- BEGIN Generated by the showBoolean macro -->
    #set ($value = $!item.getBooleanProperty($property))
    #if("$!value" == "" )
    (No value given)
    #elseif ($value)
    Yes
    #else
    No
    #end
<!-- END Generated by the showBoolean macro -->
#end

#if ($data.parameters.getString("popup"))
	#set ($popup = $data.parameters.getString("popup") )
	#set ($popup = "false")
#end
<table width="100%">
	<tr>
		<td>
			#parse($turbineUtils.getTemplateName("_report", $om.xSIType, $project))
		</td>
		<td valign="top" align="right">
			#elementActionsBox($element $search_field $search_value $data.session.getAttribute("user") $item)
		</td>
	</tr>
	<tr>
		<td>
			<table>
                <tr>
                    <td colspan="3" style="padding-top: 20px; padding-bottom: 10px; text-align: left; vertical-align: middle;">
                        <span style="font-family: $ui.sansSerifFonts; font-size: small; "><b>Sample</b></span>
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    #formLabel("Consented?")
                    <td valign="top">
                        #showBoolean("template:sample/consented" $item)
                    </td>
                </tr>
                <tr>
					<td valign="top">
						#parse("/screens/ReportProjectSpecificFields.vm")
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>
<!-- END META-INF/resources/templates/screens/XDATScreen_edit_template_sample.vm -->
